package pkg3;
/*
 * 삼각형 도형을 나타내는 클래스
 */
final class Tri implements Shape{
	//밑변 * 높이 / 2 
	//1. 밑변을 정수로 보관할 멤버변수가 필요
	private int a;
	private int b;
	
	public Tri(int a, int b) {
		this.a=a;
		this.b=b;
	}
	@Override
	
	//3. 위에서 선언한 멤버변수 a와 b에 특정 값을 입력하는 생성자를 정의

	public double getArea() {
		// TODO Auto-generated method stub
		int result =a*b/2;
		return result;
	}
	
}
class Rect implements Shape{

	double a,b;
	@Override
	public double getArea() {
		// TODO Auto-generated method stub
		
		return 0;
	}
	
	
}
